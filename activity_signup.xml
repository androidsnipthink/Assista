<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.example.abhishek.myapplication.Signup"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:background="@color/Theme_grey"
    android:layout_width="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Theme_grey"
    >

    <TextView

        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="@string/first_name"
        android:textColor="@color/TextColor"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        />

    <EditText
        android:id="@+id/firstname_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Edita_o"
        android:layout_below="@+id/first_name"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:textSize="17sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:includeFontPadding="true"
        android:padding="8dp"
        android:textColor="@color/white"

        />
    <TextView

        android:id="@+id/last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="@string/last_name"
        android:layout_below="@+id/firstname_input"
        android:textColor="@color/TextColor"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        />

    <EditText
        android:id="@+id/last_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Edita_o"
        android:layout_below="@+id/last_name"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:textSize="17sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:includeFontPadding="true"
        android:padding="8dp"
        android:textColor="@color/white"

        />
    <TextView

        android:id="@+id/Emailid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/email_id"
        android:textStyle="bold"
        android:textColor="@color/TextColor"
        android:layout_below="@+id/last_name_input"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        />
    <EditText
        android:id="@+id/email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Edita_o"
        android:layout_below="@+id/Emailid1"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:includeFontPadding="true"
        android:padding="8dp"

        android:textColor="@color/white"

        />


    <TextView

        android:id="@+id/mobile_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/mobile"
        android:textStyle="bold"
        android:textColor="@color/TextColor"
        android:layout_below="@+id/email_input"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        />
    <EditText
        android:id="@+id/mobile_no_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Edita_o"
        android:layout_below="@+id/mobile_no"
        android:layout_marginTop="10dp"
        android:inputType="phone"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:includeFontPadding="true"
        android:padding="8dp"
        android:textSize="17sp"
        android:textColor="@color/white"
        />

    <TextView

        android:id="@+id/password1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="@string/password"
        android:textColor="@color/TextColor"
        android:layout_below="@+id/mobile_no_input"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        />
    <EditText
        android:id="@+id/password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Edita_o"
        android:layout_below="@+id/password1"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:includeFontPadding="true"
        android:paddingBottom="15dp"
        android:textSize="17sp"
        android:textColor="@color/white"

        />
    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_input"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/backDescription"
        android:background="@drawable/back_button_smallest"
        android:layout_marginStart="55dp"
        />
    <ImageButton
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_input"
        android:layout_marginLeft="170dp"
        android:contentDescription="@string/nextButtonSignUp"
        android:layout_marginTop="16dp"
        android:layout_alignLeft="@id/back"
        android:background="@drawable/next_button_without_back_ground_larg_smallest"
        />

</RelativeLayout>
</ScrollView>